menu "Bk_thirdparty::Wanson"

	config WANSON_ASR
		bool "Enable Wanson ASR"
		default n
		help
			Enable Wanson Automatic Speech Recognition

	config WANSON_ASR_GROUP_VERSION
		bool "Enable Wanson ASR_GROUP_VERSION"
		default y
		help
			Enable Wanson ASR_GROUP_VERSION

	choice WANSON_ASR_WORDS_VERSION
		depends on WANSON_ASR
		prompt "Select Words Version"
		default WANSON_ASR_GROUP_VERSION_WORDS_V1

		config WANSON_ASR_WORDS_VERSION_V1
		bool "Enable Words Version V1"
		help
			support wakeword "a er mi nuo"

		config WANSON_ASR_WORDS_VERSION_V2
		bool "Enable Words Version V2"
		help
			support wakeword "hi armino"

		config WANSON_ASR_GROUP_VERSION_WORDS_V1
		bool "Enable Wanson ASR Group Version_V1"
		help
			support wakeword "hi armino"

		config WANSON_ASR_GROUP_VERSION_WORDS_V2
		bool "Enable Wanson ASR Group Version_V2"
		help
			support wakeword "nihao armino"


	endchoice

endmenu
